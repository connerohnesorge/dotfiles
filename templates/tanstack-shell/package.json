{
  "name": "tanstack-auth-app",
  "version": "0.1.0",
  "type": "module",
  "description": "TanStack Start application with authentication and dashboard",
  "main": "index.js",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "node .output/server/index.mjs",
    "lint": "npm run lint:eslint && npm run lint:oxlint",
    "lint:eslint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:oxlint": "oxlint",
    "lint:fix": "eslint . --ext ts,tsx --fix && oxlint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:browser": "vitest run --browser.enabled=true",
    "test:browser:ui": "vitest --browser.enabled=true --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@tanstack/react-start": "^1.103.3",
    "@tanstack/react-router": "^1.103.3",
    "@tanstack/react-query": "^5.62.7",
    "@tanstack/react-table": "^8.21.0",
    "@tanstack/react-form": "^0.36.0",
    "@tanstack/react-virtual": "^3.11.1",
    "@tanstack/zod-adapter": "^1.103.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^6.0.7",
    "drizzle-orm": "^0.38.2",
    "better-sqlite3": "^11.6.0",
    "bcryptjs": "^2.4.3",
    "jose": "^5.9.6",
    "zod": "^3.24.1",
    "vinxi": "^0.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/node": "^22.10.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.12",
    "typescript": "^5.7.3",
    "eslint": "^9.18.0",
    "@eslint/js": "^9.18.0",
    "typescript-eslint": "^8.18.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "vitest": "^2.1.8",
    "@vitest/browser": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "playwright": "^1.49.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@testing-library/react": "^16.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.0",
    "jsdom": "^26.0.0",
    "eslint-plugin-import": "^2.31.0",
    "oxlint": "^0.15.0",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.2.5",
    "drizzle-kit": "^0.30.1",
    "tailwindcss": "^4.0.0",
    "@tailwindcss/vite": "^4.0.0-beta.8",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "keywords": [
    "tanstack",
    "react",
    "auth",
    "dashboard",
    "fullstack",
    "typescript"
  ],
  "author": "Conner Ohnesorge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/conneroisu/dotfiles"
  }
}